import stdio;

int
main(int argc, char **argv)
{
    int i = 3;

    printf("%d", i);    // 3
    i += 1;
    printf(";%d", i);   // 4
    i -= 1;
    printf(";%d", i);   // 3
    i *= 4;
    printf(";%d", i);   // 12
    i /= 3;
    printf(";%d", i);   // 4
    i %= 3;
    printf(";%d", i);   // 1
    i &= 7;
    printf(";%d", i);   // 1
    i |= 6;
    printf(";%d", i);   // 7
    i ^= 2;
    printf(";%d", i);   // 5
    i >>= 2;
    printf(";%d", i);   // 1
    i <<= 2;
    printf(";%d", i);   // 4

    // pointer diff arithmetic (size=1)
    {
        char *string = "Hello, World!";
        char *p;

        p = string;
        p += 1;
        printf(";%c", *p);

        p -= 1;
        printf(";%c", *p);
    }

    // pointer diff arithmetic (size=4)
    {
        int[4] xs;
        int* p;

        xs[0] = 75;
        xs[1] = 76;
        xs[2] = 77;
        xs[3] = 78;

        p = xs;
        p += 1;
        printf(";%d", *p);

        p -= 1;
        printf(";%d", *p);
    }

    puts("");
    return 0;
}
