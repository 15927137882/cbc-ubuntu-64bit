import stdio;

int
main(int argc, char **argv)
{
    int i = 3;

    printf("%d", i);    // 3
    i += 1;
    printf(";%d", i);   // 4
    i -= 1;
    printf(";%d", i);   // 3
    i *= 4;
    printf(";%d", i);   // 12
    i /= 3;
    printf(";%d", i);   // 4
    i %= 3;
    printf(";%d", i);   // 1
    i &= 7;
    printf(";%d", i);   // 1
    i |= 6;
    printf(";%d", i);   // 7
    i ^= 2;
    printf(";%d", i);   // 5
    i >>= 2;
    printf(";%d", i);   // 1
    i <<= 2;
    printf(";%d", i);   // 4
    puts("");

    return 0;
}
